{
  "name": "simple-vm",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "generate-ast": "script/generate-ast.js src/ && npm run format",
    "build": "tsc",
    "start": "node dist/cli",
    "test": "jest",
    "format": "prettier --tab-width 4 --single-quote true --trailing-comma all --write \"{src,script}/**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.51",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "ts-jest": "^21.2.1",
    "typescript": "^2.6.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
